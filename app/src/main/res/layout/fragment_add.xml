<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginBottom="?actionBarSize"
    tools:context=".ui.add.AddFragment">

    <TextView
        android:id="@+id/text_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="24sp"/>


    <LinearLayout
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:id="@+id/layout_input_data"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/input_nama_pengirim"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:text="KWITANSI"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"></TextView>

            <EditText
                android:visibility="gone"
                android:hint="ID"
                android:id="@+id/input_id"
                android:textSize="16sp"
                android:enabled="false"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                android:hint="Terima Dari"
                android:id="@+id/input_nama_terimadari"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                android:hint="Penerima"
                android:id="@+id/input_nama_penerima"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/input_banyak_uang"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <EditText
                android:hint="Nominal Uang"
                android:id="@+id/input_nominal"
                android:textSize="16sp"
                android:inputType="number"
                android:maxLength="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/input_tujuan_pembayaran"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Untuk Pembayaran"
                android:id="@+id/input_deskripsi"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="Buat"
            android:textStyle="bold"
            android:textSize="16sp"></Button>




    </LinearLayout>

</RelativeLayout>
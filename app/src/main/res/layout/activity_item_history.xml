<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_kotak_tombol"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1sp"
            android:layout_marginTop="1sp"
            android:background="@color/duit"
            android:orientation="horizontal"
            android:paddingHorizontal="5sp"
            android:paddingVertical="5sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Printed"
                    android:layout_marginLeft="5sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingRight="10sp">

                <TextView
                    android:id="@+id/text_jam_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:id="@+id/text_tanggal_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="italic"></TextView>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_gravity="center"
            android:background="@drawable/line"
            android:textSize="10sp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="No"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nomor_history"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Id Random"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/line"
                        android:textSize="10sp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="Terima Dari"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nama_pengirim_history"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Nama Pengirim"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/line"
                        android:textSize="10sp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="Penerima"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nama_penerima_history"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Nama Penerima"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/line"
                        android:textSize="10sp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="Nominal"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nominal_history"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Nominal"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/line"
                        android:textSize="10sp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="Untuk Pembayaran"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_deskripsi_history"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Deskripsi"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/line"
                        android:textSize="10sp"></TextView>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>